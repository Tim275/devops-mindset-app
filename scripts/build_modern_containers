#!/bin/bash
echo "🐳 Building modernized containers with Mischa's simple Dockerfiles..."

# Build backend
echo "Building modernized backend..."
docker build -t devops-backend-modern src/backend/

# Build frontend
echo "Building modernized frontend..."
docker build -t devops-frontend-modern src/frontend/

echo "✅ Modernized containers built with simple Dockerfiles"
docker images | grep devops.*modern

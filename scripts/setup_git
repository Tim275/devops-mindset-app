#!/bin/bash

# Git-Konfiguration für den Container einrichten
git config --global user.name "${GIT_AUTHOR_NAME:-YourName}"
git config --global user.email "${GIT_AUTHOR_EMAIL:-your.email@example.com}"

# Repository als sicheres Verzeichnis markieren
git config --global --add safe.directory /workspaces/devops-projekt

# Push-Verhalten konfigurieren
git config --global push.autoSetupRemote true

# Prüfen, ob Remote konfiguriert ist
if ! git remote -v | grep -q origin; then
  echo "Git-Remote 'origin' hinzufügen..."
  # Passe die URL an dein GitHub-Repository an
  git remote add origin https://github.com/YourUsername/devops-projekt.git
fi

echo "Git-Konfiguration abgeschlossen:"
git config --global --list